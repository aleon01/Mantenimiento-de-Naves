<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/emple"
    tools:context=".AsignarActividadAdmi">

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="642dp"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="52dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Asignacion Actividades"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textColorHighlight="@color/common_google_signin_btn_text_dark_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="234dp"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/LV_Actividades"
                android:layout_width="171dp"
                android:layout_height="match_parent"
                android:cacheColorHint="@color/common_google_signin_btn_text_dark_default" />

            <Space
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ListView
                android:id="@+id/LV_Empleados"
                android:layout_width="172dp"
                android:layout_height="match_parent"
                android:cacheColorHint="@color/common_google_signin_btn_text_dark_default" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|end"
                android:onClick="AsignarTareas"
                android:text="Asignar" />

            <ListView
                android:id="@+id/LV_ActividadesUsuarios"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@color/common_google_signin_btn_text_dark_default" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>